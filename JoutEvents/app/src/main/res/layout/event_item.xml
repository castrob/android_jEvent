<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:clickable="true"
    android:onClick="gotoEvent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_eventname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_eventName"
                    android:textSize="24sp"
                    android:layout_marginLeft="8dp" />

                <TextView
                    android:id="@+id/tv_organizername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="24dp"
                    android:text="@string/tv_organizerName"/>

                <TextView
                    android:id="@+id/tv_organizerfone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_organizerFone"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="24dp"/>

                <TextView
                    android:id="@+id/tv_eventdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_eventDate"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="24dp"/>
            </LinearLayout>

            <LinearLayout
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_createfacebookevent"
                    android:layout_width="40dp"
                    android:onClick="onClick"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_fb_logo"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/btn_createlinkedinevent"
                    android:layout_width="40dp"
                    android:layout_marginTop="16dp"
                    android:onClick="onClick"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_in_logo"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>